<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.bubble.entity.ProductEntity" table="product" schema="Ecommerce">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(225)" length="225" not-null="true"/>
        </property>
        <property name="type">
            <column name="type" sql-type="varchar(225)" length="225" not-null="true"/>
        </property>
        <property name="description">
            <column name="description" sql-type="varchar(225)" length="225" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>