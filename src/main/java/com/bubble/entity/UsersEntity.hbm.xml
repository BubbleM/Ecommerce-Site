<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <!--class用于指定持久化类和数据表的映射
        @param name:指定持久化类的完整类名　包括包名
        @param table：指定数据表的名称 如果不指定该属性,Hibernate将使用类名作为表名
    -->
    <class name="com.bubble.entity.UsersEntity" table="users" schema="Ecommerce">
        <!--class元素中包含一个id和多个property
            @Element id元素对应数据表中的标识，指定持久化类的OID和表主建的映射
            @Element property元素描述数据表中字段的属性
        -->
        <!--
            @param name:用于指定持久化类中的属性
            @param column:用于指定数据表中的字段名称
            @param type:用于指定字段的类型
            @Element generator：用于配置数据表主键的生成策略　通过class属性进行设置
        -->
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(225)" length="225" not-null="true"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(225)" length="225" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>